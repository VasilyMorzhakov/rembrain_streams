{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "ES2017",
    "lib": ["ES6", "DOM", "ES2016", "ES2017", "WebWorker"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src", "test"],
    "exclude": ["node_modules", "rollup.*.js", "dist"]
}
